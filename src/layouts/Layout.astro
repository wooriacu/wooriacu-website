---
import "../styles/global.css"
import { getRelativeLocaleUrl } from "astro:i18n"
import type { Locale } from "../utils/i18n"
import { getTranslations } from "../utils/i18n"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

export interface Props {
  locale: Locale
  currentPath?: string
}

const { locale, currentPath = "" } = Astro.props

// Get translations for the current locale
const translations = getTranslations(locale)

// Generate canonical and alternate URLs
const canonical = `https://wooriacu.com${getRelativeLocaleUrl(locale, currentPath)}`
const hreflangEn = `https://wooriacu.com${getRelativeLocaleUrl("en", currentPath)}`
const hreflangEs = `https://wooriacu.com${getRelativeLocaleUrl("es", currentPath)}`

// SEO data from translations
const title = `${translations.site.name} - ${translations.hero.subtitle}`
const description = translations.site.description
const keywords = translations.site.keywords
const siteName = translations.site.name
const lang = locale
const localeForMeta = locale === "en" ? "en_US" : "es_ES"
const ogTitle = title
const ogDescription = description
const ogImage = "https://wooriacu.com/woori-acu-clinic-1.jpg"

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "MedicalBusiness",
  name: siteName,
  image: ogImage,
  description: description,
  url: canonical,
  telephone: "+19517771011",
  address: {
    "@type": "PostalAddress",
    streetAddress: "3579 Arlington Ave Suite 900",
    addressLocality: "Riverside",
    addressRegion: "CA",
    postalCode: "92506",
    addressCountry: "US",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 33.9466568,
    longitude: -117.3915209,
  },
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "18:00",
    },
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: "Saturday",
      opens: "09:00",
      closes: "15:00",
    },
  ],
  sameAs: [
    "https://www.google.com/maps/place/Woori+Acupuncture/@33.9466568,-117.3921646,19z/",
  ],
  medicalSpecialty: [
    "Acupuncture",
    "Traditional Korean Medicine",
    "Herbal Medicine",
  ],
  priceRange: "$$",
}
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content={siteName} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={localeForMeta} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={ogTitle} />
    <meta property="twitter:description" content={ogDescription} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Additional SEO Tags -->
    <meta name="geo.region" content="US-CA" />
    <meta name="geo.placename" content="Riverside" />
    <meta name="geo.position" content="33.9466568;-117.3915209" />
    <meta name="ICBM" content="33.9466568, -117.3915209" />

    <!-- Language and Alternate URLs -->
    <link rel="alternate" href={hreflangEn} hreflang="en" />
    <link rel="alternate" href={hreflangEs} hreflang="es" />
    <link rel="alternate" href={hreflangEn} hreflang="x-default" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Global Styles imported above -->

    <!-- Plausible Analytics -->
    <script
      defer
      data-domain="wooriacu.com"
      src="https://plausible.starliz.com/js/script.file-downloads.hash.outbound-links.pageview-props.revenue.tagged-events.js"
    ></script>
    <script>
      window.plausible =
        window.plausible ||
        function () {
          ;(window.plausible.q = window.plausible.q || []).push(arguments)
        }
    </script>
  </head>
  <body>
    <Header locale={locale}/>
    <slot />
    <Footer locale={locale}/>
  </body>
</html>
